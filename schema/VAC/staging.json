{
    "$schema": "../jesgo.json",
    "$id": "/schema/VAC/staging",
    "jesgo:version": "1.0",
    "jesgo:unique": true,
    "type": "object",
    "title": "病期診断",
    "$comment": "腟がんの病期診断.",
    "properties": {
        "治療施行状況": {
            "type": "string",
            "enum": [
                "初回手術施行例",
                "術前治療後に手術施行",
                "手術未施行例",
                "手術療法、薬物療法、放射線療法を実施せず"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "FIGO": {
            "type": "string",
            "jesgo:ui:listtype": "suggestlist",
            "title": "FIGO分類(日産婦2014、FIGO1971)",
            "jesgo:tag": "figo",
            "enum": [
                "Ⅰ期",
                "Ⅱ期",
                "Ⅲ期",
                "Ⅳ期(亜分類不明)",
                "ⅣA期",
                "ⅣB期"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "治療施行状況": {
                        "enum": [
                            "初回手術施行例"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "pTNM": {
                        "$ref": "#/$defs/pTNM"
                    },
                    "ypTNM": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "治療施行状況": {
                        "const": "術前治療後に手術施行"
                    }
                }
            },
            "then": {
                "properties": {
                    "pTNM": {},
                    "ypTNM": {
                        "$ref": "#/$defs/ypTNM"
                    }
                }
            }
        }
    ],
    "$defs": {
        "pTNM": {
            "type": "object",
            "title": "pTNM分類",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/N"
                },
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "ypTNM": {
            "type": "object",
            "title": "ypTNM分類",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/N"
                },
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "T": {
            "$id": "#T",
            "title": "T分類",
            "type": "string",
            "enum": [
                "TX",
                "T0",
                "Tis",
                "T1",
                "T2",
                "T3",
                "T4"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "N": {
            "$id": "#N",
            "title": "N分類",
            "type": "string",
            "enum": [
                "所属リンパ節転移の評価が不可能",
                "所属リンパ節転移なし",
                "所属リンパ節転移あり"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "M": {
            "$id": "#M",
            "type": "string",
            "title": "M分類",
            "enum": [
                "遠隔転移なし",
                "遠隔転移あり",
                "遠隔転移の評価が不可能"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        }
    }
}
