{
    "$schema": "../jesgo.json",
    "$id": "/schema/evaluation/recist_assessment",
    "jesgo:version": "1.0",
    "jesgo:unique": true,
    "type": "object",
    "title": "治療効果",
    "jesgo:parentschema": [
        "/schema/surveillance",
        "/schema/treatment/summary"
    ],
    "properties": {
        "判定日": {
            "type": "string",
            "format": "date",
            "jesgo:set": "eventdate"            
        },
        "判定": {
            "type": "string",
            "anyOf": [
                {
                    "type":"string",
                    "enum": ["CR"],
                    "title": "CR: 完全奏功(complete response)"
                },
                {
                    "type":"string",
                    "enum": ["PR"],
                    "title": "PR: 部分奏功(partial response)"
                },
                {
                    "type":"string",
                    "enum": ["SD"],
                    "title": "SD: 安定(stable disease)"
                },
                {
                    "type":"string",
                    "enum": ["PD"],
                    "title": "PD: 進行(progressive disease)"
                }
            ]
        },
        "評価法": {
            "type": "string",
            "enum": [
                "CT",
                "MRI",
                "PET-CT"
            ]
        },
        "縮小率": {
            "type": "number",
            "units": "%"
        }
    }
}
