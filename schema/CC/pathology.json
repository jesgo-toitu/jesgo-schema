{
    "$schema": "../jesgo.json",
    "$id": "/schema/CC/pathology",
    "jesgo:version": "2.2",
    "jesgo:valid": ["2023-09-01"],
    "jesgo:unique": true,
    "type": "object",
    "title": "組織診断",
    "properties": {
        "組織型": {
            "type": "string",
            "oneOf": [
                {
                    "title": "上皮性腫瘍 (扁平上皮癌)",
                    "enum": [
                        "扁平上皮癌 HPV関連",
                        "扁平上皮癌 HPV非依存性",
                        "扁平上皮癌, NOS"
                    ]
                },
                {
                    "title": "上皮性腫瘍 (腺癌)",
                    "enum": [
                        "腺癌 HPV関連",
                        "腺癌 HPV非依存性",
                        "腺癌, NOS"
                    ]
                },
                {
                    "title": "上皮性腫瘍(その他)",
                    "enum": [
                        "腺扁平上皮癌",
                        "すりガラス細胞癌",
                        "腺様基底細胞癌",
                        "粘表皮癌",
                        "腺様嚢胞癌",
                        "未分化癌",
                        "カルチノイド腫瘍",
                        "非定型的カルチノイド腫瘍",
                        "小細胞神経内分泌癌",
                        "大細胞神経内分泌癌",
                        "その他"
                    ]
                },
                {
                    "title": "間葉性腫瘍および腫瘍類似病変",
                    "enum": [
                        "平滑筋肉腫",
                        "横紋筋肉腫",
                        "胞巣状軟部肉腫",
                        "血管肉腫",
                        "悪性末梢神経鞘腫瘍",
                        "脂肪肉腫",
                        "未分化頸管肉腫",
                        "ユーイング肉腫"
                    ]
                },
                {
                    "title": "上皮性・間葉性混合腫瘍",
                    "enum": [
                        "腺肉腫",
                        "癌肉腫"
                    ]
                },
                {
                    "title": "メラノサイト腫瘍",
                    "enum": [
                        "悪性黒色腫"
                    ]
                }
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "扁平上皮癌 詳細": {},
        "腺癌 詳細": {},
        "その他組織型": {}
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "組織型": {
                        "enum": [
                            "扁平上皮癌 HPV関連",
                            "扁平上皮癌 HPV非依存性",
                            "扁平上皮癌, NOS"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "扁平上皮癌 詳細": {
                        "type": "string",
                        "enum": [
                            "角化型扁平上皮癌（角化型パターン）",
                            "非角化型扁平上皮癌（非角化型パターン）",
                            "乳頭状扁平上皮癌（乳頭状パターン）",
                            "類基底細胞癌（類基底パターン）",
                            "コンジローマ様癌（コンジローマ様パターン）",
                            "疣（いぼ）状癌（疣状パターン）",
                            "扁平移行上皮癌（扁平移行上皮パターン）",
                            "リンパ上皮腫様癌（リンパ上皮腫様パターン）"
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "組織型": {
                        "enum": [
                            "腺癌 HPV関連",
                            "腺癌 HPV非依存性",
                            "腺癌, NOS"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "腺癌 詳細": {
                        "type": "string",
                        "enum": [
                            "通常型内頸部腺癌",
                            "粘液性癌",
                            "腺癌 HPV非依存性、胃型",
                            "腸型粘液性癌",
                            "印環細胞型粘液性癌",
                            "絨毛腺管癌",
                            "類内膜癌",
                            "腺癌 HPV非依存性、明細胞型",
                            "漿液性癌",
                            "腺癌 HPV非依存性、中腎型",
                            "神経内分泌癌を伴う腺癌"
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "組織型": {
                        "const": "その他"
                    }
                }
            },
            "then": {
                "properties": {
                    "その他組織型": {
                        "type": "string",
                        "jesgo:ui:textarea": 1
                    }
                }
            }
        }
    ],
    "jesgo:childschema": [
        "/schema/evaluations/immunohistochemistry",
        "/schema/evaluations/oncogenes",
        "/schema/record/pathlogy_report"
    ]
}