{
    "$schema": "../jesgo.json",
    "$id": "/schema/CC/pathology",
    "jesgo:version": "1.0",
    "jesgo:unique": true,
    "type": "object",
    "title": "組織診断",
    "description": "WHO分類2014年",
    "properties": {
        "組織型": {
            "type": "string",
            "oneOf": [
                {
                    "title": "上皮性腫瘍 (扁平上皮癌)",
                    "enum": [
                        "角化型扁平上皮癌",
                        "非角化型扁平上皮癌",
                        "乳頭状扁平上皮癌",
                        "類基底細胞癌",
                        "コンジローマ様癌",
                        "疣（いぼ）状癌",
                        "扁平移行上皮癌",
                        "リンパ上皮腫様癌",
                        "扁平上皮癌（分類不能）"
                    ]
                },
                {
                    "title": "上皮性腫瘍 (腺癌)",
                    "enum": [
                        "通常型内頸部腺癌",
                        "粘液性癌",
                        "胃型粘液性癌",
                        "腸型粘液性癌",
                        "印環細胞型粘液性癌",
                        "絨毛腺管癌",
                        "類内膜癌",
                        "明細胞癌",
                        "漿液性癌",
                        "中腎癌",
                        "神経内分泌癌を伴う腺癌",
                        "腺癌（分類不能）"
                    ]
                },
                {
                    "title": "上皮性腫瘍(その他)",
                    "enum": [
                        "腺扁平上皮癌",
                        "すりガラス細胞癌",
                        "腺様基底細胞癌",
                        "腺様嚢胞癌",
                        "未分化癌",
                        "カルチノイド腫瘍",
                        "非定型的カルチノイド腫瘍",
                        "小細胞神経内分泌癌",
                        "大細胞神経内分泌癌",
                        "その他"
                    ]
                },
                {
                    "title": "間葉性腫瘍および腫瘍類似病変",
                    "enum": [
                        "平滑筋肉腫",
                        "横紋筋肉腫",
                        "胞巣状軟部肉腫",
                        "血管肉腫",
                        "悪性末梢神経鞘腫瘍",
                        "脂肪肉腫",
                        "未分化頸管肉腫",
                        "ユーイング肉腫"
                    ]
                },
                {
                    "title": "上皮性・間葉性混合腫瘍",
                    "enum": [
                        "腺肉腫",
                        "癌肉腫"
                    ]
                },
                {
                    "title": "メラノサイト腫瘍",
                    "enum": [
                        "悪性黒色腫"
                    ]
                }
            ]
        },
        "その他組織型": {},
        "組織学的異型度": {
            "type": "string",
            "enum": [
                "Grade 1",
                "Grade 2",
                "Grade 3",
                "異型度評価の対象に含まれない",
                "不明"
            ]
        }
    },
    "if": {
        "properties": {
            "組織型": {
                "const": "その他"
            }
        }
    },
    "then": {
        "properties": {
            "その他組織型": {
                "type": "string",
                "jesgo:ui:textarea": 1
            }
        }
    },
    "jesgo:childschema": [
        "/schema/evaluation/immunohistochemistry",
        "/schema/evaluation/oncogenes",
        "/schema/record/pathlogy_report"
    ]
}
