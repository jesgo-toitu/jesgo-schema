{
    "$schema": "../jesgo.json",
    "$id": "/schema/EM/root",
    "jesgo:version": "1.0",
    "type": "object",
    "title": "患者台帳 子宮体がん",
    "$comment": "患者レコードの最上位に位置する基本情報.",
    "jesgo:unique": true,
    "jesgo:parentschema": [
        "/"
    ],
    "required": [
        "がん種"
    ],
    "properties": {
        "がん種": {
            "type": "string",
            "default": "子宮体がん",
            "jesgo:required": [
                "JSOG"
            ],
            "readOnly": true
        },
        "初回治療開始日": {
            "type": "string",
            "format": "date",
            "jesgo:get": "initial_treatment",
            "jesgo:required": [
                "JSOG"
            ]
        },
        "診断日": {
            "type": "string",
            "format": "date"
        },
        "腫瘍登録対象": {
            "title": "婦人科腫瘍登録対象症例",
            "description": "*** 以下の症例は除外されます. ***<br>- 診断のみ行い、治療を行わなかった場合<br>- 試験開腹のみ行い、それ以後に何ら治療が行われていない場合<br>- 診断が最終的に細胞診のみによって下された場合<br>- 先行治療が他施設の場合<br>",
            "type": "string",
            "enum": [
                "いいえ",
                "はい"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        }
    },
    "if": {
        "properties": {
            "腫瘍登録対象": {
                "const": "はい"
            }
        }
    },
    "then": {
        "properties": {
            "腫瘍登録番号": {
                "jesgo:required": [
                    "JSOG"
                ],
                "type": "string",
                "pattern": "^EM20[0-9]{2}-[1-9][0-9]*$"
            },
            "予後調査": {
                "type": "object",
                "description": "予後調査の登録日の入力をもって調査登録実施とします.",
                "properties": {
                    "3年": {
                        "type": "string",
                        "format": "date"
                    },
                    "5年": {
                        "type": "string",
                        "format": "date"
                    }
                }
            }
        }
    },
    "jesgo:ui:subschemastyle": "tab",
    "jesgo:subschema": [
        "/schema/EM/staging",
        "/schema/EM/findings",
        "/schema/EM/pathology",
        "/schema/treatment/initial_treatment"
    ]
}
