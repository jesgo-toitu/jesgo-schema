{
    "$schema": "../jesgo.json",
    "$id": "/schema/EM/findings",
    "jesgo:version": "2.1",
    "jesgo:valid": ["2023-09-01"],
    "jesgo:unique": true,
    "type": "object",
    "title": "診断所見",
    "properties": {
        "分子遺伝学的プロファイル": {
            "type": "object",
            "jesgo:ui:subschemastyle": "inline",
            "properties": {
                "POLE変異": {
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "あり",
                        "なし",
                        "不明"                        
                    ]
                },
                "MMR/MSI": {
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "欠損/不安定",
                        "保持/安定",
                        "不明"                        
                    ]
                },
                "p53": {
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "description": "免疫組織化学、MSI検査、NGSやパネルを含む遺伝子検査など、方法にかかわらず判断できる範囲で入力する。",
                    "enum": [
                        "野生型",
                        "過剰発現",
                        "完全陰性",
                        "不明"                                               
                    ]
                }
            }
        },
        "腹水細胞診": {
            "type": "string",
            "enum": [
                "陽性",
                "陰性",
                "未施行",
                "不明"
            ],
            "jesgo:required": [
                "JSOG"
            ]
        },
        "筋層浸潤": {
            "type": "object",
            "title": "筋層浸潤の有無",
            "description": "初回手術未施行例では画像診断での判定所見",
            "jesgo:ui:subschemastyle": "inline",
            "properties": {
                "所見": {
                    "type": "string",
                    "enum": [
                        "浸潤なし",
                        "浸潤＜1/2",
                        "浸潤≧1/2",
                        "不明"
                    ],
                    "jesgo:required": [
                        "JSOG"
                    ]
                },
                "診断方法": {
                    "type": "string",
                    "enum": [
                        "初回手術施行による病理学的診断",
                        "MRI",
                        "CT",
                        "PET/CT"
                    ],
                    "jesgo:required": [
                        "JSOG"
                    ]
                }
            }
        }
    },
    "jesgo:childschema": [
        "/schema/evaluations/exam",
        "/schema/evaluations/cervix",
        "/schema/evaluations/colposcopy",
        "/schema/evaluations/hysteroscopy",
        "/schema/evaluations/cystoscopy",
        "/schema/evaluations/colonoscopy",
        "/schema/evaluations/tumor_markers",
        "/schema/evaluations/imaging",
        "/schema/evaluations/ascites",
        "/schema/evaluations/pleural_effusion",
        "/schema/evaluations/immunohistochemistry",
        "/schema/evaluations/oncogenes",
        "/schema/evaluations/performance_status",
        "/schema/evaluations/physical_status"
    ]
}
