{
    "$schema": "../jesgo.json",
    "$id": "/schema/EM/staging",
    "jesgo:version": "2.1",
    "jesgo:valid": ["2023-09-01"],
    "jesgo:unique": true,
    "type": "object",
    "title": "病期診断",
    "$comment": "子宮体がんの病期診断.",
    "description": "術前に放射線治療や化学療法を施行した症例は「術前治療施行例」となり、「術前治療施行例」となり、進行期分類(FIGO TNM)は画像診断を用い、臨床進行期を推定し登録、手術時所見に即してpTNM分類を入力する。",
    "properties": {
        "手術状況": {
            "type": "string",
            "$comment": "この選択で進行期の記載が動的に変更される.",
            "enum": [
                "初回手術施行",
                "術前治療後に手術施行",
                "手術未施行",
                "手術療法、化学療法、放射線療法を実施せず"
            ]
        },
        "FIGO": {
            "type": "string",
            "jesgo:ui:listtype": "suggestlist",
            "title": "FIGO分類(FIGO2008, 日産婦2011)",
            "description": "漿膜、付属器浸潤の場合にIIIA期とし、腹水細胞診陽性は進行期分類には用いない。",
            "jesgo:tag": "figo",
            "enum": [
                "I期(亜分類不明)",
                "IA期",
                "IB期",
                "II期",
                "III期(亜分類不明)",
                "IIIA期",
                "IIIB期",
                "IIIC期(亜分類不明)",
                "IIIC1期",
                "IIIC2期",
                "IV期(亜分類不明)",
                "IVA期",
                "IVB期"
            ]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "enum": [
                            "初回手術施行",
                            "手術施行例"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {},
                    "pTNM": {
                        "$ref": "#/$defs/pTNM",
                        "$comment": "ステージング手術が実施されたものはpTNM分類でTNMを記載する."
                    },
                    "ypTNM": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "enum": [
                            "術前治療後に手術施行",
                            "術前治療施行例"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {
                        "$ref": "#/$defs/cTNM",
                        "$comment": "ステージング手術が実施さていないものはcTNM分類としてTNMを記載する."
                    },
                    "pTNM": {},
                    "ypTNM": {
                        "$ref": "#/$defs/ypTNM",
                        "$comment": "術前治療後の手術によるステージングはypTNM分類を記載する."
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "enum": [
                            "手術未施行",
                            "手術療法、化学療法、放射線療法を実施せず",
                            "手術未施行例"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {
                        "$ref": "#/$defs/cTNM",
                        "$comment": "ステージング手術が実施さていないものはcTNM分類としてTNMを記載する."
                    },
                    "pTNM": {},
                    "ypTNM": {}
                }
            }
        }
    ],
    "$defs": {
        "cTNM": {
            "$id": "#cTNM",
            "type": "object",
            "title": "cTNM分類",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/N"
                },
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "pTNM": {
            "$id": "#pTNM",
            "type": "object",
            "title": "pTNM分類",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/pT"
                },
                "N": {
                    "$ref": "#/$defs/pN"
                },
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "ypTNM": {
            "$id": "#pTNM",
            "type": "object",
            "title": "ypTNM分類",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/pN"
                },
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "T": {
            "$id": "#T",
            "title": "T分類",
            "type": "object",
            "properties": {
                "T": {
                    "$ref": "#/$defs/classificationT"
                }
            }
        },
        "pT": {
            "$id": "#pT",
            "title": "T分類",
            "type": "object",
            "properties": {
                "T": {
                    "$ref": "#/$defs/classificationT"
                },
                "付属器転移": {
                    "type": "object",
                    "description": "両側付属器摘出の既往があり、手術時に付属器が存在しなかった場合や部分的にでも卵巣を温存（残存）し、病理学的な検索が不十分であった場合には、総合的に判断して選択し、備考にその旨入力する。",
                    "jesgo:ui:subschemastyle": "inline",
                    "properties": {
                        "転移状況": {
                            "type": "string",
                            "enum": [
                                "付属器転移を認めない",
                                "付属器転移を認める",
                                "不明"
                            ]
                        },
                        "備考": {
                            "type": "string"
                        }
                    }
                },
                "子宮漿膜浸潤": {
                    "type": "string",
                    "description": "漿膜の破綻がなくとも筋層をこえて漿膜直下の結合織に達しているものは漿膜浸潤とする。",
                    "enum": [
                        "子宮漿膜浸潤を認めない",
                        "子宮漿膜浸潤を認める",
                        "不明"
                    ]
                },
                "骨盤腹膜播種": {
                    "type": "string",
                    "enum": [
                        "骨盤腹膜播種を認めない",
                        "骨盤腹膜播種を認める",
                        "不明"
                    ]
                },
                "子宮傍組織浸潤": {
                    "type": "string",
                    "enum": [
                        "子宮傍組織浸潤を認めない",
                        "子宮傍組織浸潤を認める",
                        "不明"
                    ]
                },
                "腟壁浸潤": {
                    "type": "string",
                    "enum": [
                        "腟壁浸潤を認めない",
                        "腟壁浸潤を認める",
                        "不明"
                    ]
                },
                "腹腔内播種": {
                    "type": "string",
                    "description": "骨盤腔内に位置していても虫垂、小腸、大網は骨盤外臓器として扱う。",
                    "enum": [
                        "腹腔内播種を認めない",
                        "腹腔内播種を認める",
                        "不明"
                    ]
                },
                "膀胱または腸管粘膜浸潤": {
                    "type": "string",
                    "enum": [
                        "粘膜浸潤を認めない",
                        "粘膜浸潤を認める",
                        "不明"
                    ]
                }
            }
        },
        "classificationT": {
            "$id": "#classificationT",
            "type": "string",
            "enum": [
                "TX: 組織学的に子宮体癌と診断したが、その進行度の判定が何らかの障害で不能なもの。",
                "T0: 臨床所見より子宮体癌と診断したが、原発巣より組織学的な癌の診断ができないもの(組織学的検索をせずに治療を始めたものを含む)。",
                "T1(亜分類不明)",
                "T1a",
                "T1b",
                "T2",
                "T3(亜分類不明)",
                "T3a",
                "T3b",
                "T4"
            ]
        },
        "N": {
            "$id": "#N",
            "title": "N分類",
            "type": "object",
            "$comment": "治療前評価としてのN分類",
            "properties": {
                "画像診断の計測手段": {
                    "type": "string",
                    "enum": [
                        "MRI",
                        "CT",
                        "PET/CT",
                        "施行せず"
                    ],
                    "description": "リンパ節転移の診断は短径10mm以上をもって腫大とする。短径10mm未満でもPET/CTにおける集積で転移と判断してもよい。"
                },
                "NP": {
                    "type": "string",
                    "title": "骨盤リンパ節の所見",
                    "enum": [
                        "NPX: リンパ節転移を判定するための画像診断が行われなかったとき",
                        "NP0: 骨盤リンパ節に転移を認めない",
                        "NP1: 骨盤リンパ節に転移を認める"
                    ]
                },
                "NA": {
                    "type": "string",
                    "title": "傍大動脈リンパ節の所見",
                    "enum": [
                        "NAX: リンパ節転移を判定するための画像診断が行われなかったとき",
                        "NA0: 傍大動脈リンパ節に転移を認めない",
                        "NA1: 傍大動脈リンパ節に転移を認める"
                    ]
                }
            }
        },
        "pN": {
            "$id": "#pN",
            "title": "N分類",
            "type": "object",
            "$comment": "手術評価としてのN分類",
            "properties": {
                "RP": {
                    "title": "骨盤リンパ節に対する処置",
                    "type": "string",
                    "enum": [
                        "骨盤リンパ節を摘出しなかった(病理学的索が行われなかった)",
                        "骨盤リンパ節の選択的郭清(生検)を行った",
                        "骨盤リンパ節の系統的郭清を行った",
                        "センチネルリンパ節生検を行った"
                    ]
                },
                "RPX": {
                    "title": "骨盤リンパ節の所見",
                    "type": "string",
                    "enum": [
                        "RP1: 骨盤リンパ節の病理学的検索が行われなかったが、明らかな腫大を認めない",
                        "RP2: 骨盤リンパ節の病理学的検索が行われなかったが、明らかな腫大を認める",
                        "RP3: 骨盤リンパ節を摘出し、病理学的に転移を認めない",
                        "RP4: 骨盤リンパ節を摘出し、転移を認める"
                    ]
                },
                "RA": {
                    "title": "傍大動脈リンパ節に対する処置",
                    "type": "string",
                    "enum": [
                        "傍大動脈リンパ節を摘出しなかった(病理学的索が行われなかった)",
                        "傍大動脈リンパ節の選択的郭清(生検)を行った",
                        "傍大動脈リンパ節の系統的郭清を行った",
                        "センチネルリンパ節生検を行った"
                    ]
                },
                "RAX": {
                    "title": "傍大動脈リンパ節の所見",
                    "type": "string",
                    "enum": [
                        "RA1: 傍大動脈リンパ節の病理学的検索が行われなかったが、明らかな腫大を認めない",
                        "RA2: 傍大動脈リンパ節の病理学的検索が行われなかったが、明らかな腫大を認める",
                        "RA3: 傍大動脈リンパ節を摘出し、病理学的に転移を認めない",
                        "RA4: 傍大動脈リンパ節を摘出し、転移を認める"
                    ]
                }
            }
        },
        "M": {
            "$id": "#M",
            "title": "M分類",
            "type": "object",
            "properties": {
                "M": {
                    "type": "string",
                    "enum": [
                        "M0: 遠隔転移なし",
                        "M1: その他の遠隔転移の存在",
                        "M9: 遠隔転移の判定不十分なとき"
                    ]
                }
            }
        }
    }
}
