{
    "$schema": "../jesgo.json",
    "$id": "/schema/OV/staging",
    "jesgo:version": "1.0",
    "type": "object",
    "title": "病期診断",
    "$comment": "卵巣がんの病期診断.",
    "jesgo:parentschema": [
        "/schema/OV/root"
    ],
    "jesgo:unique": true,
    "properties": {
        "手術状況": {
            "type": "string",
            "$comment": "この選択により進行期の記載が動的に変更される.",
            "enum": [
                "手術施行",
                "術前治療施行",
                "手術以外の治療のみ施行",
                "治療施行未施行"
            ]
        },
        "FIGO": {
            "type": "string",
            "jesgo:ui:listtype": "suggestlist",
            "title": "FIGO分類",
            "description": "手術進行期分類(日産婦2014、FIGO 2014)",
            "$comment": "手術状況が 手術施行例 以外の場合はXXでエクスポートする",
            "enum": [
                "IA期",
                "IB期",
                "IC期",
                "IIA期",
                "IIB期",
                "IIIA1期",
                "IIIA2期",
                "IIIB期",
                "IIIC期",
                "IVA期",
                "IVB期",
                "不明"
            ]
        },
        "IC期の場合": {},
        "IIIA1期の場合": {},
        "cTNM": {
            "$ref": "#/$defs/cTNM"
        },
        "pTNM": {},
        "ypTNM": {}
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "const": "手術施行"
                    }
                }
            },
            "then": {
                "properties": {
                    "pTNM": {
                        "$ref": "#/$defs/pTNM"
                    },
                    "ypTNM": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "const": "術前治療施行"
                    }
                }
            },
            "then": {
                "properties": {
                    "pTNM": {},
                    "ypTNM": {
                        "$ref": "#/$defs/ypTNM"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "手術状況": {
                        "enum": [
                            "手術以外の治療のみ施行",
                            "治療施行未施行"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "pTNM": {},
                    "ypTNM": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "FIGO": {
                        "const": "IC期"
                    }
                }
            },
            "then": {
                "properties": {
                    "IC期の場合": {
                        "type": "string",
                        "enum": [
                            "1C1: 手術操作による被膜破綻",
                            "1C2: 自然被膜破綻あるいは被膜表面への浸潤",
                            "1C3: 腹水または腹腔洗浄細胞診に悪性細胞が認められるもの"
                        ]
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "FIGO": {
                        "const": "IIIA1期"
                    }
                }
            },
            "then": {
                "properties": {
                    "IIIA1期の場合": {
                        "type": "string",
                        "enum": [
                            "3A11: 転移巣最大径10mm以下",
                            "3A12: 転移巣最大径10mmをこえる",
                            "3A1X: 転移巣最大径による分類不能"
                        ]
                    }
                }
            }
        }
    ],
    "$defs": {
        "cTNM": {
            "$id": "#cTNM",
            "type": "object",
            "title": "cTMN分類",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/cN"
                },
                "M": {
                    "$ref": "#/$defs/cM"
                }
            }
        },
        "pTNM": {
            "type": "object",
            "title": "pTMN分類",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/N"
                },
                "M": {
                    "$ref": "#/$defs/M"
                },
                "遠隔転移部位": {
                    "$ref": "#/$defs/locations",
                    "jesgo:ui:visibleWhen": {
                        "properties": {
                            "pTNM": {
                                "properties": {
                                    "M": {
                                        "pattern": "^1"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "ypTNM": {
            "$id": "#ypTNM",
            "type": "object",
            "title": "ypTMN分類",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/N"
                },
                "M": {
                    "$ref": "#/$defs/M"
                },
                "遠隔転移部位": {
                    "$ref": "#/$defs/locations",
                    "jesgo:ui:visibleWhen": {
                        "properties": {
                            "ypTNM": {
                                "properties": {
                                    "M": {
                                        "pattern": "^1"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "T": {
            "$id": "#T",
            "title": "T分類",
            "type": "string",
            "enum": [
                "1a",
                "1b",
                "1c1",
                "1c2",
                "1c3",
                "2a",
                "2b",
                "3a",
                "3b",
                "3c",
                "不明"
            ]
        },
        "N": {
            "$id": "#N",
            "title": "N分類",
            "description": "pNの決定は細胞診または組織診による。触診や画像診断上、腫大を認めただけではpN1とはしない。",
            "type": "string",
            "enum": [
                "0: 所属リンパ節に転移を認めない",
                "1a: 所属リンパ節に転移を認める(転移巣最大径10mm以下、組織所見による)",
                "1b: 所属リンパ節に転移を認める(転移巣最大径10mm超、組織所見による)",
                "1: 所属リンパ節に転移を認める(転移巣最大径不明)",
                "X: 所属リンパ節に転移を判定するための病理学的検索が行われなかった"
            ]
        },
        "cN": {
            "$id": "#cN",
            "title": "N分類",
            "type": "string",
            "enum": [
                "0: 所属リンパ節に転移を認めない",
                "1: 所属リンパ節に転移を認める（画像初見などによる）",
                "X: 所属リンパ節に転移を判定するための病理学的検索が行われなかった"
            ]
        },
        "M": {
            "$id": "#M",
            "type": "string",
            "title": "M分類",
            "enum": [
                "0: 遠隔転移を認めない",
                "1a: 胸水中に悪性細胞を認める",
                "1b: 実質転移ならびに腹腔外臓器(鼠径リンパ節ならびに腹腔外リンパ節を含む)に転移を認めるもの",
                "X: 遠隔転移を判定するための検索が行われなかった"
            ]
        },
        "locations": {
            "$id": "#locations",
            "type": "array",
            "title": "遠隔転移の部位",
            "items": {
                "type": "string",
                "oneOf": [
                    {
                        "const": "PUL",
                        "title": "肺転移"
                    },
                    {
                        "const": "PLE",
                        "title": "胸膜転移"
                    },
                    {
                        "const": "LYM",
                        "title": "リンパ節転移"
                    },
                    {
                        "const": "HEP",
                        "title": "肝転移"
                    },
                    {
                        "const": "BRA",
                        "title": "脳転移"
                    },
                    {
                        "const": "OSS",
                        "title": "骨転移"
                    },
                    {
                        "const": "SKI",
                        "title": "皮膚転移"
                    },
                    {
                        "const": "MAR",
                        "title": "骨髄転移"
                    },
                    {
                        "const": "OTH",
                        "title": "その他"
                    }
                ]
            },
            "minItems": 1
        },
        "cM": {
            "$id": "#cM",
            "type": "string",
            "title": "M分類",
            "enum": [
                "0: 遠隔転移を認めない",
                "1: 胸水中に悪性細胞を認めるもの(胸水細胞診による)、実質転移ならびに腹腔外臓器(鼠径リンパ節や腹腔外リンパ節を含む)に転移を認めるもの(画像所見による)",
                "X: 遠隔転移を判定するための検索が行われなかったとき"
            ]
        }
    }
}
