{
  "$schema": "../jesgo.json",
  "$id": "/schema/VUC/staging",
  "jesgo:version": "1.0",
  "jesgo:unique": true,
  "type": "object",
  "title": "病期診断",
  "$comment": "外陰がんの病期診断.",
  "properties": {
    "治療施行状況": {
      "type": "string",
      "enum": [
        "初回手術施行例",
        "術前治療後に手術施行",
        "手術未施行例",
        "手術療法、薬物療法、放射線療法を実施せず"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    },
    "FIGO": {
      "type": "string",
      "jesgo:ui:listtype": "suggestlist",
      "title": "FIGO分類(日産婦2022、FIGO2021)",
      "jesgo:tag": "figo",
      "enum": [
        "Ⅰ期（亜分類不明）",
        "ⅠA期",
        "ⅠB期",
        "Ⅱ期",
        "Ⅲ期（亜分類不明）",
        "ⅢA期",
        "ⅢB期",
        "ⅢC期",
        "Ⅳ期（亜分類不明）",
        "ⅣA期",
        "ⅣB期"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "治療施行状況": {
            "enum": [
              "初回手術施行例"
            ]
          }
        }
      },
      "then": {
        "properties": {
          "pTNM": {
            "$ref": "#/$defs/pTNM"
          },
          "ypTNM": {}
        }
      }
    },
    {
      "if": {
        "properties": {
          "治療施行状況": {
            "const": "術前治療後に手術施行"
          }
        }
      },
      "then": {
        "properties": {
          "pTNM": {},
          "ypTNM": {
            "$ref": "#/$defs/ypTNM"
          }
        }
      }
    }
  ],
  "$defs": {
    "pTNM": {
      "type": "object",
      "title": "pTNM分類",
      "jesgo:ui:subschemastyle": "row",
      "properties": {
        "T": {
          "$ref": "#/$defs/T"
        },
        "N": {
          "$ref": "#/$defs/N"
        },
        "M": {
          "$ref": "#/$defs/M"
        }
      }
    },
    "ypTNM": {
      "type": "object",
      "title": "ypTNM分類",
      "jesgo:ui:subschemastyle": "row",
      "properties": {
        "T": {
          "$ref": "#/$defs/T"
        },
        "N": {
          "$ref": "#/$defs/N"
        },
        "M": {
          "$ref": "#/$defs/M"
        }
      }
    },
    "T": {
      "$id": "#T",
      "title": "T分類",
      "type": "string",
      "enum": [
        "TX",
        "T0",
        "Tis",
        "T1（亜分類不明）",
        "T1a",
        "T1b",
        "T2",
        "T3"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    },
    "N": {
      "$id": "#N",
      "title": "N分類",
      "type": "string",
      "enum": [
        "領域リンパ節転移の評価が不可能",
        "領域リンパ節転移なし",
        "5㎜未満のリンパ節転移が1～2個",
        "5㎜以上のリンパ節転移が1個",
        "5㎜未満のリンパ節転移が3個以上",
        "5㎜以上のリンパ節転移が2個以上",
        "節外浸潤を呈するリンパ節転移",
        "固着性または潰瘍性の領域リンパ節転移"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    },
    "M": {
      "$id": "#M",
      "type": "string",
      "title": "M分類",
      "enum": [
        "遠隔転移なし",
        "遠隔転移あり",
        "遠隔転移を判定するための最低必要な検索が行われなかった"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    }
  }
}
