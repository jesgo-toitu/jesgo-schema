{
    "$schema": "../jesgo.json",
    "$id": "/schema/treatment/operation_adverse_events",
    "jesgo:version": "1.6",
    "title": "手術合併症",
    "type": "object",
    "jesgo:unique": false,
    "required": [
        "合併症の種別",
        "Grade",
        "転帰"
    ],
    "properties": {
        "合併症の種別": {
            "type": "string",
            "$comment": "JSGOEではAE.*.Categoryにマップ",
            "enum": [
                "出血",
                "術中手術操作",
                "気腹・潅流操作",
                "機器の不具合・破損",
                "機器の誤操作",
                "術中使用した薬剤",
                "体腔内遺残",
                "術後"
            ]
        },
        "出血量": {
            "$comment": "JSGOEではAE.*.BloodCountにマップ"
        },
        "操作により発生した合併症": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "上記により発生した合併症": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "気腹・潅流操作の合併症": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "薬剤により発生した合併症": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "関連する機器": {
            "$comment": "JSGOEではAE.*.Causeにマップ"
        },
        "関連する薬剤": {
            "$comment": "JSGOEではAE.*.Causeにマップ"
        },
        "遺残したもの": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "発生部位": {
            "$comment": "JSGOEではAE.*.Locationにマップ"
        },
        "合併症の内容": {
            "$comment": "JSGOEではAE.*.Titleにマップ"
        },
        "Grade": {
            "type": "string",
            "jesgo:ui:listtype": "list",
            "title": "合併症のGrade",
            "enum": [
                "Grade 1: 正常な術後経過からの逸脱",
                "Grade 2: 中等症 輸血および中心静脈栄養を要する場合を含む",
                "Grade 3a: 全身麻酔を要さない治療介入を要する",
                "Grade 3b: 全身麻酔下での治療介入を要する",
                "Grade 4: ICU管理を要する、合併症により生命を脅かす状態",
                "Grade 5: 死亡"
            ]
        },
        "転帰": {
            "type": "array",
            "jesgo:ui:listtype": "list",
            "title": "合併症の転帰",
            "items": {
                "$ref": "#/$defs/JOED_course"
            },
            "minItems": 1
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "出血"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {
                        "oneOf": [
                            {
                                "type": "string",
                                "enum": [
                                    "不明"
                                ]
                            },
                            {
                                "type": "integer",
                                "units": "ml",
                                "minimum": "500"
                            }
                        ],
                        "$comment": "JSGOEではAE.*.BloodCountにマップ",
                        "description": "500g以上の出血を合併症と判断します."
                    },
                    "操作により発生した合併症": {},
                    "上記により発生した合併症": {},
                    "気腹・潅流操作の合併症": {},
                    "薬剤により発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {},
                    "関連する薬剤": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術中手術操作"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "操作により発生した合併症": {
                        "type": "array",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "臓器損傷",
                                "出血"
                            ]
                        },
                        "minItems": 1
                    },
                    "上記により発生した合併症": {},
                    "気腹・潅流操作の合併症": {},
                    "薬剤により発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {
                        "$ref": "#/$defs/JOED_locations"
                    },
                    "関連する薬剤": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "気腹・潅流操作"
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "発生した合併症": {},
                    "気腹・潅流操作の合併症": {
                        "type": "array",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "気腫",
                                "ガス塞栓(炭酸ガス)",
                                "ガス塞栓(空気)",
                                "水中毒",
                                "その他 循環器系障害",
                                "その他 呼吸器系障害",
                                "その他 神経系障害",
                                "上記以外"
                            ],
                            "minItems": 1
                        }
                    },
                    "薬剤により発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {
                        "$ref": "#/$defs/JOED_locations"
                    },
                    "関連する薬剤": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "enum": [
                            "機器の不具合・破損"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "操作により発生した合併症": {},
                    "上記により発生した合併症": {
                        "type": "array",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "臓器損傷",
                                "出血"
                            ]
                        },
                        "minItems": 0
                    },
                    "気腹・潅流操作の合併症": {},
                    "薬剤により発生した合併症": {},
                    "関連する機器": {
                        "$ref": "#/$defs/JOED_devices"
                    },
                    "発生部位": {
                        "$ref": "#/$defs/JOED_locations"
                    },
                    "関連する薬剤": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "enum": [
                            "機器の誤操作"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "出血量": {},
                    "操作により発生した合併症": {},
                    "上記により発生した合併症": {
                        "type": "array",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "臓器損傷",
                                "出血"
                            ]
                        },
                        "minItems": 0
                    },
                    "気腹・潅流操作の合併症": {},
                    "薬剤により発生した合併症": {},
                    "関連する機器": {
                        "$ref": "#/$defs/JOED_devices"
                    },
                    "発生部位": {
                        "$ref": "#/$defs/JOED_locations"
                    },
                    "関連する薬剤": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術中使用した薬剤"
                    }
                }
            },
            "then": {
                "properties": {
                    "関連する薬剤": {
                        "type": "array",
                        "$comment": "JSGOEではAE.*.Causeにマップ",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "バソプレッシン",
                                "アドレナリン",
                                "インジゴカルミン",
                                "上記にないもの"
                            ]
                        }
                    },
                    "薬剤により発生した合併症": {
                        "type": "array",
                        "$comment": "JSGOEではAE.*.Titleにマップ",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "アナフィラキシー",
                                "心停止",
                                "徐脈",
                                "頻脈",
                                "それ以外"
                            ]
                        }
                    },
                    "出血量": {},
                    "操作により発生した合併症": {},
                    "上記により発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {},
                    "遺残したもの": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "体腔内遺残"
                    }
                }
            },
            "then": {
                "properties": {
                    "遺残したもの": {
                        "type": "array",
                        "jesgo:ui:listtype": "buttons",
                        "items": {
                            "type": "string",
                            "enum": [
                                "検体",
                                "器械",
                                "ガーゼなど衛生材料",
                                "針",
                                "上記にないもの"
                            ]
                        },
                        "minItems": 1
                    },
                    "出血量": {},
                    "操作により発生した合併症": {},
                    "上記により発生した合併症": {},
                    "気腹・潅流操作の合併症": {},
                    "薬剤により発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {},
                    "関連する薬剤": {},
                    "合併症の内容": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "合併症の種別": {
                        "const": "術後"
                    }
                }
            },
            "then": {
                "properties": {
                    "合併症の内容": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "enum": [
                                        "出血",                                         
                                        "血腫"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "創部感染",
                                        "創離開",
                                        "腟断端部離開",
                                        "メッシュ露出"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "腹膜炎",
                                        "子宮感染",
                                        "卵管・卵巣感染",
                                        "メッシュ感染"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "消化管穿孔",
                                        "イレウス",
                                        "腸閉塞"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "腹壁瘢痕・ポートサイトヘルニア"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "尿管損傷",
                                        "尿路閉塞",
                                        "膀胱損傷",
                                        "その他 尿路系障害"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "肺動脈血栓塞栓症",
                                        "深部静脈血栓症",
                                        "心肺停止",
                                        "その他 循環器系障害"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "気胸",
                                        "その他 呼吸器系障害"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "コンパートメント症候群",
                                        "その他 骨軟部系障害"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "上肢神経障害",
                                        "下肢神経障害",
                                        "その他 神経系障害"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "リンパ浮腫",
                                        "非感染性リンパ嚢胞",
                                        "感染性リンパ嚢胞・後腹膜膿瘍"
                                    ]
                                },
                                {
                                    "title": "──",
                                    "enum": [
                                        "子宮腔からの出血持続",
                                        "子宮腔の癒着",
                                        "卵管閉塞"
                                    ]
                                }
                            ]
                        }
                    },
                    "出血量": {},
                    "発生した合併症": {},
                    "関連する機器": {},
                    "発生部位": {},
                    "関連する薬剤": {},
                    "遺残したもの": {}
                }
            }
        }
    ],
    "$defs": {
        "JOED_devices": {
            "type": "array",
            "items": {
                "type": "string",
                "anyOf": [
                    {
                        "type": "string",
                        "enum": [
                            "鉗子"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "内視鏡"
                        ],
                        "title": "内視鏡(スコープ・シース)"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "カテーテル"
                        ],
                        "title": "カテーテル・ガイドワイヤー"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "内視鏡関連装置"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "潅流気腹装置"
                        ],
                        "title": "潅流・気腹装置"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "トロッカー"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "子宮操作器具"
                        ],
                        "title": "子宮マニピュレーター・腟カップ・パイプ"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "組織回収器具"
                        ],
                        "title": "組織回収器具（袋）・モルセレーター"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "止血材料"
                        ],
                        "title": "血管クリップ・縫合糸"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "ステープラー"
                        ],
                        "title": "自動縫合・吻合器"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "電気メス"
                        ],
                        "title": "電気メス（モノポーラー・バイポーラー・アルゴンビーム）"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "SUS"
                        ],
                        "title": "超音波凝固切開装置"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "VSS"
                        ],
                        "title": "ベッセルシーリングシステム"
                    },
                    {
                        "type": "string",
                        "enum": [
                            "レーザー"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "マイクロ波"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "上記にないもの"
                        ]
                    }
                ],
                "minItems": 1
            }
        },
        "JOED_locations": {
            "type": "array",
            "items": {
                "type": "string",
                "oneOf": [
                    {
                        "enum": [
                            "子宮",
                            "卵管",
                            "卵巣",
                            "腟"
                        ]
                    },
                    {
                        "title": "──",
                        "enum": [
                            "膀胱",
                            "尿管"
                        ]
                    },
                    {
                        "title": "──",
                        "enum": [
                            "後腹膜"
                        ]
                    },
                    {
                        "title": "──",
                        "enum": [
                            "直腸",
                            "結腸"
                        ]
                    },
                    {
                        "type": "string",
                        "enum": [
                            "消化管"
                        ],
                        "title": "消化管(その他)"
                    },
                    {
                        "title": "──",
                        "enum": [
                            "腹壁",
                            "腹壁血管",
                            "皮下"
                        ]
                    },
                    {
                        "title": "──",
                        "enum": [
                            "動脈",
                            "静脈",
                            "大血管動脈",
                            "大血管静脈"
                        ]
                    },
                    {
                        "title": "──",
                        "enum": [
                            "神経"
                        ]
                    },
                    {
                        "enum": [
                            "骨格系"
                        ],
                        "title": "骨・骨膜・軟骨"
                    },
                    {
                        "title": "──",
                        "enum": [
                            "上記にない部位"
                        ]
                    }
                ],
                "minItems": 1
            }
        },
        "JOED_course": {
            "type": "string",
            "oneOf": [
                {
                    "title": "Grade  1-2",
                    "enum": [
                        "経過観察",
                        "周術期管理の延長",
                        "入院期間の延長",
                        "再入院"
                    ]
                },
                {
                    "title": "Grade 2",
                    "enum": [
                        "自己血輸血・術中回収血",
                        "輸血・血液製剤"
                    ]
                },
                {
                    "title": "Grade 3 術中の追加手術",
                    "enum": [
                        "術中の追加手術～開腹",
                        "術中の追加手術～腹腔鏡",
                        "術中の追加手術～子宮鏡",
                        "術中の追加手術～経腟",
                        "術中の追加手術～その他"
                    ]
                },
                {
                    "title": "Grade 3 術後の再手術",
                    "enum": [
                        "術後の再手術～開腹",
                        "術後の再手術～腹腔鏡",
                        "術後の再手術～子宮鏡",
                        "術後の再手術～経腟",
                        "術後の再手術～その他"
                    ]
                },
                {
                    "title": "Grade 4 - 合併症管理のためICU入室",
                    "enum": [
                        "ICU管理"
                    ]
                },
                {
                    "title": "Grade 5 - 死亡",
                    "enum": [
                        "死亡"
                    ]
                }
            ]
        }
    }
}