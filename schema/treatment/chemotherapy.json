{
  "$schema": "../jesgo.json",
  "$id": "/schema/treatment/chemotherapy",
  "jesgo:version": "1.3",
  "title": "薬物療法",
  "jesgo:copy": true,
  "type": "object",
  "properties": {
    "投与開始日": {
      "type": "string",
      "format": "date",
      "jesgo:set": "eventdate",
      "jesgo:tag": "treatment_chemo"
    },
    "投与終了日": {
      "type": "string",
      "format": "date"
    },
    "治療区分": {
      "type": "string",
      "enum": [
        "化学療法",
        "分子標的治療",
        "免疫チェックポイント阻害剤",
        "化学療法＋分子標的治療",
        "化学療法＋免疫チェックポイント阻害剤",
        "分子標的治療＋免疫チェックポイント阻害剤",
        "化学療法＋分子標的治療＋免疫チェックポイント阻害剤",
        "ホルモン治療",
        "その他の治療"
      ],
      "jesgo:required": [
        "JSOG"
      ]
    },
    "分子標的治療の種類": {},
    "レジメン名称": {
      "type": "string"
    },
    "治療情報": {
      "type": "array",
      "items": {
        "type": "object",
        "jesgo:ui:subschemastyle": "inline",
        "properties": {
          "薬剤名": {
            "$ref": "#/$defs/drugs"
          },
          "自由入力": {
            "type": "string",
            "jesgo:ui:visibleWhen": {
              "properties": {
                "薬剤名": {
                  "enum": [
                    "その他"
                  ]
                }
              }
            }
          },
          "投与量": {
            "type": "number",
            "minimum": 0
          },
          "投与量の単位": {
            "type": "string",
            "enum": [
              "AUC",
              "mg/㎡",
              "mg/kg",
              "mg/body",
              "mg/日"
            ]
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "治療区分": {
            "pattern": ".*分子標的治療.*"
          }
        }
      },
      "then": {
        "properties": {
          "分子標的治療の種類": {
            "type": "string",
            "enum": [
              "分子標的治療（血管新生阻害剤）",
              "分子標的治療（PARP阻害剤）",
              "分子標的治療（その他）",
              "分子標的治療同時併用（血管新生阻害剤＋PARP阻害剤）"
            ]
          }
        }
      }
    }
  ],
  "$defs": {
    "drugs": {
      "$id": "#drugs",
      "type": "string",
      "jesgo:ui:listtype": "suggestlist",
      "oneOf": [
        {
          "title": "白金製剤",
          "enum": [
            "オキサリプラチン",
            "カルボプラチン",
            "シスプラチン",
            "ネダプラチン"
          ]
        },
        {
          "title": "アルキル化薬",
          "enum": [
            "アクチノマイシンD",
            "イホスファミド",
            "シクロホスファミド",
            "テモゾロミド",
            "ニムスチン",
            "ブレオマイシン",
            "マイトマイシンC",
            "メルファラン"
          ]
        },
        {
          "title": "微小管阻害薬",
          "enum": [
            "パクリタキセル",
            "ビンクリスチン",
            "ビンデシン",
            "ビノレルビン",
            "ドセタキセル"
          ]
        },
        {
          "title": "トポイソメラーぜ阻害薬",
          "enum": [
            "エトポシド",
            "イリノテカン",
            "ノギテカン",
            "ゾブゾキサシン"
          ]
        },
        {
          "title": "代謝拮抗薬",
          "enum": [
            "カペシタビン",
            "ゲムシタビン",
            "シタラビン（Ara-C）",
            "テガフール・ギメラシル・オテラシル（TS-1）",
            "テガフール・ウラシル（UFT）",
            "フルオロウラシル",
            "メルカプトプリン（6-MP）",
            "メトトレキサート",
            "ペメトレキセド"
          ]
        },
        {
          "title": "抗がん性抗生物質",
          "enum": [
            "アクチノマイシンD",
            "アクラルビシン",
            "アムルビシン",
            "イダルビシン",
            "エピルビシン",
            "ダウノルビシン",
            "ドキソルビシン",
            "ブレオマイシン",
            "ピラルビシン",
            "マイトマイシンC",
            "ミトキサトロン",
            "リポソーマルドキソルビシン"
          ]
        },
        {
          "title": "血管新生阻害薬",
          "enum": [
            "ベバシズマブ"
          ]
        },
        {
          "title": "免疫チェックポイント阻害薬",
          "enum": [
            "アテゾリズマブ",
            "イミフィンジ",
            "ニボルブマブ",
            "ペムブロリズマブ"
          ]
        },
        {
          "title": "PARP阻害薬",
          "enum": [
            "オラパリブ",
            "ニラパリブ",
            "ルカパリブ"
          ]
        },
        {
          "title": "チロシンキナーゼ阻害薬",
          "enum": [
            "アキシチニブ",
            "アカラブルチニブ",
            "アファチニブ",
            "イブルチニブ",
            "イマチニブ",
            "カボザンチニブ",
            "カプマチニブ",
            "クリゾチニブ",
            "ゲフィチニブ",
            "ダコミチニブ",
            "ダサチニブ",
            "チラブルチニブ",
            "テポチニブ",
            "パゾパニブ",
            "パンデタニブ",
            "ブリグチニブ",
            "スニチニブ",
            "セリチニブ",
            "ソラフェニブ",
            "ラパチニブ",
            "ラロトレクチニブ",
            "ロルラチニブ",
            "レンバチニブ",
            "ニロチニブ",
            "ポナチニブ",
            "ペミガチニブ",
            "オシメルチニブ",
            "ギルテリチニブ"
          ]
        },
        {
          "title": "ホルモン治療",
          "enum": [
            "アナストロゾール",
            "タモキシフェン",
            "メドロキシプロゲステロン酢酸エステル（MPA）"
          ]
        },
        {
          "title": "抗体薬物複合体（ADC）",
          "enum": [
            "チソツマブ＿ベドチン"
          ]
        },
        {
          "title": "MEK阻害薬",
          "enum": [
            "トラメチニブ"
          ]
        },
        {
          "title": "その他",
          "enum": [
            "その他"
          ]
        }
      ]
    }
  }
}
