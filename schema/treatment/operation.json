{
    "$schema": "../jesgo.json",
    "$id": "/schema/treatment/operation",
    "jesgo:version": "1.0",
    "type": "object",
    "title": "手術療法",
    "jesgo:ui:subschemastyle": "tab",
    "properties": {
        "手術日": {
            "type": "string",
            "format": "date",
            "jesgo:set": "eventdate"
        },
        "手術時間": {
            "description": "加刀~終刀までの時間(分) もしくは 時:分 で入力",
            "oneOf": [
                {
                    "type": "integer",
                    "units": "分",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "pattern": "^([1-9][0-9]?:)?[0-5]?[0-9]$"
                }
            ]
        },
        "出血量": {
            "description": "加刀~終刀までの出血量(g) 不明の時は 不明 と入力",
            "oneOf": [
                {
                    "type": "integer",
                    "units": "g",
                    "minimum": 0
                },
                {
                    "type": "string",
                    "enum": [
                        "不明"
                    ]
                }
            ]
        },
        "術者": {
            "type": "array",
            "items": {
                "type": "object",
                "jesgo:ui:subschemastyle": "inline",
                "properties": {
                    "役割": {
                        "type": "string",
                        "enum": [
                            "術者",
                            "指導",
                            "助手",
                            "第一助手",
                            "第二助手",
                            "第三助手～"
                        ]
                    },
                    "名前": {
                        "type": "string"
                    }
                }
            }
        },
        "手術完遂度": {
            "type": "string",
            "enum": [
                "完全摘出",
                "不完全摘出（残存腫瘍径が 1cm未満）",
                "不完全摘出（残存腫瘍径が 1cm～2cm）",
                "不完全摘出（2cmをこえる）",
                "不明",
                "施行せず"
            ]
        },
        "合併症の有無": {
            "type": "string",
            "enum": [
                "なし",
                "あり"
            ]
        }
    },
    "jesgo:subschema": [
        "/schema/treatment/operation_procedures"
    ],
    "jesgo:childschema": [
        "/schema/treatment/operation_adverse_events",
        "/schema/treatment/blood_transfusion"
    ]
}
