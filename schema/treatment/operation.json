{
  "$schema": "../jesgo.json",
  "$id": "/schema/treatment/operation",
  "jesgo:version": "3.0",
  "jesgo:valid": [ "2025-01-01" ],
  "type": "object",
  "title": "手術療法",
  "jesgo:ui:subschemastyle": "tab",
  "properties": {
    "手術日": {
      "type": "string",
      "format": "date",
      "jesgo:set": "eventdate",
      "jesgo:tag": "treatment_surgery",
      "jesgo:required": [
        "JSGOE"
      ]
    },
    "手術時間": {
      "description": "加刀~終刀までの時間(分) もしくは 時:分 で入力",
      "oneOf": [
        {
          "type": "integer",
          "units": "分",
          "minimum": 0
        },
        {
          "type": "string",
          "pattern": "^([1-9][0-9]?:)?[0-5]?[0-9]$"
        }
      ],
      "jesgo:required": [
        "JSGOE"
      ]
    },
    "出血量": {
      "description": "加刀~終刀までの出血量(g) 不明の時は 不明 と入力",
      "oneOf": [
        {
          "type": "integer",
          "units": "g",
          "minimum": 0
        },
        {
          "type": "string",
          "enum": [
            "不明"
          ]
        }
      ]
    },
    "術者": {
      "type": "array",
      "items": {
        "type": "object",
        "jesgo:ui:subschemastyle": "inline",
        "properties": {
          "役割": {
            "type": "string",
            "enum": [
              "術者",
              "指導",
              "助手",
              "第一助手",
              "第二助手",
              "第三助手～"
            ]
          },
          "名前": {
            "type": "string"
          }
        }
      }
    },
    "術式の選択": {
      "type": "object",
      "jesgo:ui:subschemastyle": "inline",
      "properties": {
        "様式": {
          "type": "string",
          "enum": [
            "一回目手術",
            "二回目手術",
            "その他"
          ]
        },
        "予定手術内容": {
          "type": "string",
          "description": "術中合併症あるいは術中所見に基づいて、開腹移行をしても、予定されていた術式を選択する。",
          "enum": [
            "開腹術",
            "腹腔鏡手術",
            "ロボット手術",
            "該当せず"
          ]
        }
      }
    },
    "手術完遂度": {
      "type": "string",
      "description": "試験開腹術の場合は「不完全摘出（ほとんどが残存）」を選択して下さい",
      "enum": [
        "完全摘出",
        "不完全摘出（残存腫瘍径が1cm未満）",
        "不完全摘出（残存腫瘍径が1cm～2cm）",
        "不完全摘出（2cmを超える）",
        "不完全摘出（ほとんどが残存）",
        "不明"
      ]
    },
    "合併症の有無": {
      "type": "string",
      "jesgo:tag": "has_complications",
      "jesgo:required": [
        "JSGOE"
      ],
      "enum": [
        "なし",
        "あり"
      ]
    }
  },
  "jesgo:subschema": [
    "/schema/treatment/operation_procedures"
  ],
  "jesgo:childschema": [
    "/schema/treatment/operation_adverse_events",
    "/schema/treatment/laparo_information",
    "/schema/treatment/robot_information",
    "/schema/treatment/blood_transfusion",
    "/schema/treatment/sentinel"
  ]
}
