{
    "$schema": "../jesgo.json",
    "$id": "/schema/CC/staging",
    "jesgo:version": "1.3",
    "jesgo:unique": true,
    "type": "object",
    "title": "病期診断",
    "description":"FIGO分類には、初回手術施行例では手術により決定した進行期、術前治療後に手術施行例 や 手術未施行例では治療開始前に決定した進行期を入力して下さい。",
    "$comment": "子宮頸がんの病期診断.",
    "properties": {
        "治療施行状況": {
            "type": "string",
            "jesgo:required": [
                "JSOG"
            ],
            "enum": [
                "初回手術施行例",
                "術前治療後に手術施行",
                "手術未施行例",
                "手術療法、薬物療法、放射線療法を実施せず"
            ]
        },
        "FIGO": {
            "type": "string",
            "jesgo:ui:listtype": "suggestlist",
            "title": "FIGO分類(FIGO2018, 日産婦2020)",
            "jesgo:tag": "figo",
            "jesgo:required": [
                "JSOG"
            ],
            "enum": [
                "I期(亜分類不明)",
                "IA1期",
                "IA2期",
                "IA期(亜分類不明)",
                "IB1期",
                "IB2期",
                "IB3期",
                "IB期(亜分類不明)",
                "II期(亜分類不明)",
                "IIA1期",
                "IIA2期",
                "IIA期(亜分類不明)",
                "IIB期",
                "III期(亜分類不明)",
                "IIIA期",
                "IIIB期",
                "IIIC期(亜分類不明)",
                "IIIC1r期",
                "IIIC1p期",
                "IIIC2r期",
                "IIIC2p期",
                "IV期(亜分類不明)",
                "IVA期",
                "IVB期"
            ]
        },
        "cTNM": {
            "$ref": "#/$defs/cTNM"
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "治療施行状況": {
                        "enum": [
                            "初回手術施行例",
                            "初回手術施行"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {
                        "$ref": "#/$defs/cTNM"
                    },
                    "pTNM": {
                        "$ref": "#/$defs/pTNM"
                    },
                    "ypTNM": {}
                }
            }
        },
        {
            "if": {
                "properties": {
                    "治療施行状況": {
                        "const": "術前治療後に手術施行"
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {
                        "$ref": "#/$defs/cTNM"
                    },
                    "pTNM": {},
                    "ypTNM": {
                        "$ref": "#/$defs/ypTNM"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "治療施行状況": {
                        "enum": [
                            "手術未施行例",
                            "手術療法、薬物療法、放射線療法を実施せず",
                            "手術未施行",
                            "手術療法、化学療法、放射線療法を実施せず",
                            "術前治療および手術未施行例",
                            "治療施行せず"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "cTNM": {
                        "$ref": "#/$defs/cTNM"
                    },
                    "pTNM": {},
                    "ypTNM": {}
                }
            }
        }
    ],
    "$defs": {
        "cTNM": {
            "type": "object",
            "title": "cTNM分類(日産婦2020暫定版)",
            "description": "cTNM分類は、治療を開始する前に、内診・直腸診による局所所見に画像所見を加味して総合的に判断し報告する。<br>子宮頸部円錐切除術は臨床検査とみなし,これによる組織検査の結果は原則としてcTNM分類に入れる。",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/T"
                },
                "N": {
                    "$ref": "#/$defs/cN"
                },
                "M": {
                    "$ref": "#/$defs/cM"
                }
            }
        },
        "pTNM": {
            "type": "object",
            "title": "pTNM分類(初回手術を実施した症例のみ)",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/pT"
                },
                "N": {
                    "$ref": "#/$defs/pN"
                },
                "M": {
                    "$ref": "#/$defs/pM"
                }
            }
        },
        "ypTNM": {
            "type": "object",
            "title": "ypTNM分類(初回手術を実施した症例のみ)",
            "jesgo:ui:subschemastyle": "row",
            "properties": {
                "T": {
                    "$ref": "#/$defs/pT"
                },
                "N": {
                    "$ref": "#/$defs/pN"
                },
                "M": {
                    "$ref": "#/$defs/pM"
                }
            }
        },
        "T": {
            "$id": "#T",
            "type": "object",
            "title": "T分類",
            "jesgo:ui:subschemastyle": "inline",
            "properties": {
                "T": {
                    "$ref": "#/$defs/classificationT"
                }
            },
            "if": {
                "properties": {
                    "T": {
                        "pattern": "^T1a.*"
                    }
                }
            },
            "then": {
                "properties": {
                    "T1a期 詳細入力": {
                        "type": "string",
                        "jesgo:required": [
                            "JSOG"
                        ],
                        "enum": [
                            "水平方向7mm以下",
                            "水平方向7mmをこえる",
                            "不明"
                        ]
                    }
                }
            }
        },
        "pT": {
            "$id": "#pT",
            "type": "object",
            "title": "T分類",
            "jesgo:ui:subschemastyle": "inline",
            "properties": {
                "T": {
                    "$ref": "#/$defs/classificationT"
                }
            },
            "if": {
                "properties": {
                    "T": {
                        "pattern": "^T1a.*"
                    }
                }
            },
            "then": {
                "properties": {
                    "T1a期 詳細入力": {
                        "type": "string",
                        "jesgo:required": [
                            "JSOG"
                        ],
                        "enum": [
                            "水平方向7mm以下",
                            "水平方向7mmをこえる",
                            "不明"
                        ]
                    }
                }
            }
        },
        "classificationT": {
            "$id": "#classificationT",
            "type": "string",
            "jesgo:required": [
                "JSOG"
            ],
            "enum": [
                "TX",
                "T0",
                "Tis",
                "T1(亜分類不明)",
                "T1a1:脈管侵襲なし",
                "T1a1:脈管侵襲あり",
                "T1a2:脈管侵襲なし",
                "T1a2:脈管侵襲あり",
                "T1a(亜分類不明):脈管侵襲なし",
                "T1a(亜分類不明):脈管侵襲あり",
                "T1b1",
                "T1b2",
                "T1b3",
                "T1b(亜分類不明)",
                "T2(亜分類不明)",
                "T2a1",
                "T2a2",
                "T2a(亜分類不明)",
                "T2b",
                "T3(亜分類不明)",
                "T3a",
                "T3b",
                "T4"
            ]
        },
        "cN": {
            "$id": "#cN",
            "title": "N分類",
            "type": "object",
            "jesgo:ui:subschemastyle": "inline",
            "properties": {
                "N": {
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "領域リンパ節転移なし",
                        "骨盤リンパ節のみに転移を認める",
                        "傍大動脈リンパ節のみに転移を認める",
                        "骨盤および傍大動脈リンパ節転移を認める",
                        "画像診断をしなかった"
                    ]
                }
            }
        },
        "pN": {
            "$id": "#pN",
            "title": "N分類",
            "type": "object",
            "$comment": "手術評価としてのN分類",
            "properties": {
                "RP": {
                    "title": "骨盤リンパ節に対する処置",
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "骨盤リンパ節を摘出しなかった(病理学的索が行われなかった)",
                        "骨盤リンパ節の選択的郭清(生検)を行った",
                        "骨盤リンパ節の系統的郭清を行った",
                        "センチネルリンパ節生検を行った"
                    ]
                },
                "RPX": {
                    "title": "骨盤リンパ節の所見",
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "RP1: 骨盤リンパ節の病理学的検索が行われなかったが、明らかな腫大を認めない",
                        "RP2: 骨盤リンパ節の病理学的検索が行われなかったが、明らかな腫大を認める",
                        "RP3: 骨盤リンパ節を摘出し、病理学的に転移を認めない",
                        "RP4: 骨盤リンパ節を摘出し、転移を認める"
                    ]
                },
                "RA": {
                    "title": "傍大動脈リンパ節に対する処置",
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "傍大動脈リンパ節を摘出しなかった(病理学的索が行われなかった)",
                        "傍大動脈リンパ節の選択的郭清(生検)を行った",
                        "傍大動脈リンパ節の系統的郭清を行った",
                        "センチネルリンパ節生検を行った"
                    ]
                },
                "RAX": {
                    "title": "傍大動脈リンパ節の所見",
                    "type": "string",
                    "jesgo:required": [
                        "JSOG"
                    ],
                    "enum": [
                        "RA1: 傍大動脈リンパ節の病理学的検索が行われなかったが、明らかな腫大を認めない",
                        "RA2: 傍大動脈リンパ節の病理学的検索が行われなかったが、明らかな腫大を認める",
                        "RA3: 傍大動脈リンパ節を摘出し、病理学的に転移を認めない",
                        "RA4: 傍大動脈リンパ節を摘出し、転移を認める"
                    ]
                }
            }
        },
        "cM": {
            "$id": "#cM",
            "title": "M分類",
            "type": "object",
            "properties": {
                "M": {
                    "$ref": "#/$defs/M"
                },
                "L": {
                    "type": "array",
                    "title": "遠隔転移部位",
                    "items": {
                        "type": "string",
                        "enum": [
                            "L1: 縦隔リンパ節",
                            "L2: 鎖骨上(下)リンパ節",
                            "L3: 鼠径リンパ節",
                            "L9: 上記以外のリンパ節",
                            "M1: 肺",
                            "M2: 肝臓",
                            "M3: 腹膜播種",
                            "M4: 脳",
                            "M5: 骨",
                            "M9: 上記以外の実質臓器・組織"
                        ]
                    }
                }
            }
        },
        "pM": {
            "$id": "#pM",
            "title": "M分類",
            "type": "object",
            "properties": {
                "M": {
                    "$ref": "#/$defs/M"
                }
            }
        },
        "M": {
            "$id": "#M",
            "type": "string",
            "title": "遠隔転移の評価",
            "description": "鼠径リンパ節転移や腹腔内病変、子宮漿膜、付属器への転移は遠隔転移に含む。腟,骨盤漿膜への転移は遠隔転移から除外する。",
            "jesgo:required": [
                "JSOG"
            ],
            "enum": [
                "遠隔転移なし",
                "遠隔転移あり",
                "遠隔転移の判定不十分なとき"
            ]
        }
    }
}
