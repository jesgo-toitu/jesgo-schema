{
    "$schema": "../jesgo.json",
    "$id": "/schema/surveillance",
    "jesgo:version": "1.0",
    "type": "object",
    "title": "経過・所見",
    "required": [
        "確認日"
    ],
    "jesgo:parentschema": [
        "/schema/surveillance_root"
    ],
    "properties": {
        "確認日": {
            "type": "string",
            "format": "date",
            "jesgo:set": "eventdate"
        },
        "状態": {
            "type": "string",
            "description": "がんによる死亡で当該がんによるものか、他の癌による死亡か不明のときは 当該がんによる死亡 とする。<br>死因がはっきりしないががんによる死亡が十分疑われる症例は 当該がんによる死亡 とする(「死因不明」にしない)。",
            "enum": [
                "生存(非担癌)",
                "生存(担癌)",
                "当該がん腫による死亡",
                "他のがんによる死亡",
                "癌と直接関係のない死亡",
                "死因不明",
                "生死不明"
            ]
        },
        "備考": {
            "type": "string",
            "jesgo:ui:textarea": true
        }
    },
    "jesgo:ui:subschemastyle": "tab",
    "if": {
        "properties": {
            "状態": {
                "enum": [
                    "当該がん腫による死亡",
                    "他のがんによる死亡",
                    "癌と直接関係のない死亡",
                    "死因不明"
                ]
            }
        }
    },
    "then": {
        "properties": {
            "死亡": {
                "type": "boolean",
                "default": true,
                "jesgo:ui:hidden": true,
                "jesgo:set": "death"
            }
        }
    },
    "else": {
        "properties": {
            "死亡": {
                "type": "boolean",
                "default": false,
                "jesgo:ui:hidden": true,
                "jesgo:set": "death"
            }
        }
    }
}
